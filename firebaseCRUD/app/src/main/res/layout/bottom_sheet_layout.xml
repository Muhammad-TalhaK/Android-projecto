<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/RlBottomSheet"
    android:background="#296D98">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bsCourseName"
        android:text="Course Name"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="4dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bsImgView"
        android:layout_below="@+id/bsCourseName"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bsCourseName"
        android:layout_toRightOf="@+id/bsImgView"
        android:text="Description"
        android:textColor="@color/white"
        android:id="@+id/bsCourseDesc"
        android:layout_margin="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bsCourseDesc"
        android:layout_toRightOf="@+id/bsImgView"
        android:text="Suited For"
        android:textColor="@color/white"
        android:id="@+id/bsSuitedFor"
        android:layout_margin="4dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bsSuitedFor"
        android:layout_toRightOf="@+id/bsImgView"
        android:text="Price"
        android:id="@+id/bsPrice"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@+id/bsImgView">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bsEditBtn"
            android:text="Edit Course"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bsViewBtn"
            android:text="View Course"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>